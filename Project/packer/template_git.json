{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-hvm-2.0.*.1-x86_64-ebs",
          "root-device-type": "ebs"
        },
        "owners": [
          "amazon"
        ],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "packer-created {{timestamp}}",
	  "tags":{
		"Name": "Git Bundle - {{timestamp}}",
                "Description": "Image with Git Bundle."
	  }
    }
  ],
  "provisioners": [

    {
      "type": "file",
      "source": "applications/git.sh",
      "destination": "/tmp/git.sh"
    }, 
    
    {
      "type": "file",
      "source": "applications/apache.sh",
      "destination": "/tmp/apache.sh"
    },   

    {
      "type": "shell",
      "inline": [
          "/tmp/apache.sh", 
          "/tmp/git.sh"
       ]
    }
  ]
}
